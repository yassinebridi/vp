{
  "name": "@vp/api",
  "private": true,
  "version": "0.1.0",
  "description": "API package for videplacard",
  "author": "Yassine Bridi <ybridi@gmail.com>",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:vite": "vite-node",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pr": "npx prisma@2.20.1",
    "rm:generated": "if [ -d \"src/@generated\" ]; then rm -r src/@generated && echo \"@generated folder removed\";else echo \"@generated folder already removed\";fi",
    "migrate:dev": "yarn pr migrate dev --preview-feature",
    "migrate:dev:create": "yarn pr migrate dev --create-only --preview-feature",
    "migrate:reset": "yarn pr migrate reset --preview-feature",
    "migrate:deploy": "yarn pr migrate deploy --preview-feature",
    "migrate:status": "yarn pr migrate status --preview-feature",
    "migrate:resolve": "yarn pr migrate resolve --preview-feature",
    "prisma:studio": "yarn pr studio",
    "prisma:generate": "yarn rm:generated && yarn pr generate",
    "prisma:seed": "yarn pr db seed --preview-feature",
    "start:db": "yarn migrate:up && yarn prisma:generate && yarn seed"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/graphql": "^7.10.3",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.15",
    "@prisma/client": "2.20.1",
    "@vp/common": "*",
    "apollo-server-express": "^2.23.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "graphql": "^15.5.0",
    "graphql-redis-subscriptions": "^2.3.1",
    "graphql-type-json": "^0.3.2",
    "ioredis": "^4.26.0",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.5.1",
    "prisma-nestjs-graphql": "^11.0.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.7"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.4",
    "@nestjs/schematics": "^7.3.1",
    "@types/express": "^4.17.11",
    "@types/graphql-type-json": "^0.3.2",
    "@types/ioredis": "^4.22.3",
    "@types/node": "^14.14.37",
    "@types/passport-jwt": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "prisma": "2.20.1",
    "prisma-dbml-generator": "^0.5.0",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4",
    "vite": "^2.1.5",
    "vite-plugin-node": "^0.0.7"
  }
}
